<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#F2F2F2"
    android:padding="0dp"
    android:orientation="vertical"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#FFFFFF"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_comando1"
            android:textColor="#191919"
            android:text="Tipo de movimiento"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Tipo de movimiento"
            android:textColor="#191919"
            android:textSize="13sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/txt_comando2"
            android:textColor="#191919"
            android:text="Tipo de movimiento"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/input_comando1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:hint="txt"
            android:layout_below="@id/txt_comando1"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_comando2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:hint="txt"
            android:layout_below="@id/txt_comando2"/>
    </RelativeLayout>





</RelativeLayout>